{
  "editor.codeLens": false,
  "editor.renderWhitespace": "none",
  "editor.autoIndent": true,
  "editor.fontSize": 12,
  "editor.fontFamily": "Consolas, 'Courier New', monospace",
  "editor.formatOnPaste": false,
  "editor.formatOnType": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "off",

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 2000,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": {
      "when": "$(basename)"
    }
  },
  "files.hotExit": "onExit",
  "files.defaultLanguage": "typescript",
  "files.trimTrailingWhitespace": true,

  "prettier.singleQuote": true,
  "prettier.printWidth": 100,

  "peacock.affectedElements": [
    "activityBar",
    "titleBar",
    "statusBar"
  ],
  "workbench.colorTheme": "Winter is Coming (Dark Blue)",
  "workbench.colorCustomizations": {
    "activityBar.background": "#b52e31",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e7",
    "titleBar.activeBackground": "#b52e31",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#b52e31",
    "titleBar.inactiveForeground": "#e7e7e7",
    "statusBar.background": "#b52e31",
    "statusBar.foreground": "#e7e7e7"
  },
}
